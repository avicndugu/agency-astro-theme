---
const clientsData = [
  {
    image: {
      link: "assets/img/logos/microsoft.svg",
      alt: "Microsoft Logo",
    },
  },
  {
    image: {
      link: "assets/img/logos/google.svg",
      alt: "Google Logo",
    },
  },
  {
    image: {
      link: "assets/img/logos/facebook.svg",
      alt: "Facebook Logo",
    },
  },
  {
    image: {
      link: "assets/img/logos/ibm.svg",
      alt: "IBM Logo",
    },
  },
];
---

<div class="py-5">
  <div class="container">
    <div class="row align-items-center">
      {
        clientsData.map((client) => (
          <div class="col-md-3 col-sm-6 my-3">
            <a href="#!">
              <img
                class="img-fluid img-brand d-block mx-auto"
                src={client.image.link}
                alt={client.image.alt}
                aria-label={client.image.alt}
              />
            </a>
          </div>
        ))
      }
    </div>
  </div>
</div>
